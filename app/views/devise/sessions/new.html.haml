.container
  .col-md-4.col-md-offset-4
    %br/
    %h2.text-center Log in to BibleChallenge
    %br/
    - if devise_mapping.omniauthable?
      - resource_class.omniauth_providers.each do |provider|
        .centered
          - provider_name = provider.to_s.split("_")[0].titleize
          = link_to "Log in with #{provider_name}", user_omniauth_authorize_path(provider), class: "btn btn-danger"
        %br/
        %br/
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: 'form'}) do |f|
      .form-group
        = f.label :email
        = f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control'
      .form-group
        = f.label :password
        = f.password_field :password, placeholder: 'Password', class: 'form-control'

      .form-group
        = f.check_box :remember_me
        Remember me:

      = f.submit 'Log in', disable_with: 'Please Wait...', class: 'btn btn-primary btn-block'
      
      = render 'devise/shared/links'
