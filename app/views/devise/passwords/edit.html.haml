%h2
  = t 'devise.passwords.edit.change_your_password'
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token
  %div
    = f.label :password, I18n.t('devise.passwords.edit.new')
    %br/
    = f.password_field :password, :autofocus => true
  %div
    = f.label :password_confirmation, I18n.t('devise.passwords.edit.confirm')
    %br/
    = f.password_field :password_confirmation
  %div= f.submit I18n.t('devise.passwords.edit.change_your_password')
= render "devise/shared/links"
