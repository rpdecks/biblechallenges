.container
  .row
    .col-md-4.col-md-offset-4
      %br/
      %h3.text-center Forgot your password?
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post,role: 'form'}) do |f|
        = devise_error_messages!
        .form-group
          = f.label :email
          = f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control'
        = f.submit 'Send me reset password instructions', disable_with: 'Please Wait...', class: 'btn btn-primary btn-block'
        = render 'devise/shared/links'
